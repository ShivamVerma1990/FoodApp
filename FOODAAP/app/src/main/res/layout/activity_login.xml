<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#d22c2e"
    tools:context=".utill.LoginActivity">

<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/icons"
android:layout_marginTop="70dp"
android:id="@+id/imgLogo"
/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
 android:layout_below="@id/imgLogo"
     android:text="Food Happy"
android:layout_centerHorizontal="true"
android:textSize="23dp"

     android:textColor="#ffff"/>

  <EditText
    android:id="@+id/etEmail"
      android:layout_width="370dp"
      android:layout_height="43dp"


      android:layout_below="@id/imgLogo"
android:hint="@string/enter_your_number"
    android:layout_marginTop="67dp"
    android:layout_marginLeft="19dp"
      android:background="#ffff"
     android:inputType="number"
      android:backgroundTint="#ffffff"
android:drawablePadding="4dp"
    android:drawableLeft="@drawable/ic_action_number"
      android:textColor="@color/black"
    />
    <EditText

        android:drawableLeft="@drawable/ic_action_lock"
       android:drawablePadding="4dp"
    android:id="@+id/etPassword"
     android:inputType="numberPassword"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_below="@id/etEmail"
        android:hint="@string/enter_password"
        android:backgroundTint="#ffffff"
android:background="#ffff"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="19dp"

android:padding="6dp"

        />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
        android:text="Don't have an account? sing up now"
    android:layout_centerHorizontal="true"
    android:textColor="#ffff"
        android:textSize="18dp"
        android:layout_marginBottom="56dp"
/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
  android:layout_below="@+id/etPassword"
   android:layout_marginTop="12dp"
    android:layout_margin="15dp"
   android:padding="6dp"
       android:background="#8c0000"
    android:text="Login"
       android:textColor="#fff"
       android:id="@+id/btnLogin"/>
    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:text="Forgot Password?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textColor="#ffff"

        android:textSize="18sp"
   />
    </RelativeLayout>